package application;

import java.util.Locale;
import java.util.Scanner;

import entities.FiguraGeometrica;
import entities.Retangulo;

public class Principal {

	public static void main(String[] args) {
	Locale.setDefault(Locale.US);
	Scanner sc = new Scanner(System.in);
		
		System.out.println("Informe o lado A do Retângulo: ");
		double ladoA = sc.nextDouble();
		System.out.println("Informe o lado B do Retângulo: ");
		double ladoB = sc.nextDouble();
		FiguraGeometrica retangulo = new Retangulo(ladoA, ladoB);
		
		double areaRetangulo = retangulo.calcularArea();
		double perimetroRetangulo = retangulo.calcularPerimetro();
		System.out.println("A área do retângulo com lado A" + ((Quadrilatero) retangulo).getLadoA() + " e lado B = " + ((Quadrilatero) retangulo).get);

		
	}

}
